---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="404 - Page Not Found" showFooter={false}>
  <div class="error-container">
    <div class="error-content">
      <div class="error-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <path d="M12 8v4"></path>
          <path d="M12 16h.01"></path>
        </svg>
        <div class="error-code">404</div>
      </div>
      
      <h1>Page Not Found</h1>
      <p class="error-message">The page you're looking for doesn't exist or has been moved.</p>
      
      <div class="error-actions">
        <a href="/" class="action-button primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Return Home
        </a>
        <a href="javascript:history.back()" class="action-button secondary">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 12H5"></path>
            <path d="M12 19l-7-7 7-7"></path>
          </svg>
          Go Back
        </a>
      </div>
      
      <div class="error-help">
        <h2>Looking for something?</h2>
        <ul>
          <li><a href="/">Home Page</a></li>
          <li><a href="/ai">AI Chat</a></li>
          <li><a href="/rag">Knowledge Base</a></li>
          <li><a href="/profile">Your Profile</a></li>
        </ul>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
    padding: var(--space-md);
    text-align: center;
  }
  
  .error-content {
    max-width: 600px;
    animation: fadeIn 0.5s ease-in-out;
  }
  
  .error-icon {
    position: relative;
    display: inline-flex;
    justify-content: center;
    margin-bottom: var(--space-lg);
    color: hsl(var(--accent));
  }
  
  .error-code {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 2.5rem;
    font-weight: bold;
    color: hsl(var(--accent));
  }
  
  h1 {
    font-size: var(--fs-2xl);
    margin-bottom: var(--space-md);
    color: hsl(var(--txt));
  }
  
  .error-message {
    font-size: var(--fs-lg);
    color: hsl(var(--txt) / 0.8);
    margin-bottom: var(--space-xl);
  }
  
  .error-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    margin-bottom: var(--space-xl);
  }
  
  .action-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-md);
    font-weight: 500;
    transition: all var(--transition-ease-fast);
    text-decoration: none;
    cursor: pointer;
    font-size: var(--fs-md);
    min-width: 140px;
  }
  
  .action-button.primary {
    background-color: hsl(var(--accent));
    color: white;
    border: none;
  }
  
  .action-button.primary:hover {
    background-color: hsl(var(--accent) / 0.9);
    text-decoration: none;
  }
  
  .action-button.secondary {
    background-color: transparent;
    color: hsl(var(--txt));
    border: 1px solid hsl(var(--txt) / 0.2);
  }
  
  .action-button.secondary:hover {
    background-color: hsl(var(--txt) / 0.05);
    text-decoration: none;
  }
  
  .error-help {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid hsl(var(--txt) / 0.1);
  }
  
  .error-help h2 {
    font-size: var(--fs-md);
    margin-bottom: var(--space-md);
    color: hsl(var(--txt));
  }
  
  .error-help ul {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    justify-content: center;
    list-style: none;
    padding: 0;
  }
  
  .error-help a {
    color: hsl(var(--accent));
    text-decoration: none;
    transition: color var(--transition-ease-fast);
  }
  
  .error-help a:hover {
    text-decoration: underline;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .error-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .action-button {
      width: 100%;
      max-width: 240px;
    }
    
    .error-help ul {
      flex-direction: column;
      gap: var(--space-sm);
    }
  }
</style>