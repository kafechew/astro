  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to boost your productivity?</h2>
        <p>Join the growing community using HermitAI to automate research tasks.</p>
        <div class="cta-buttons">
          <a href="/register" class="btn-primary">Get Started Free</a>
          <a href="/pricing" class="btn-secondary">View Pricing</a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Container */
  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-md);
  }

  /* Section Styles */
  .section-title {
    font-size: var(--fs-2xl);
    color: hsl(var(--txt));
    text-align: center;
    margin-bottom: var(--space-md);
  }

  .section-subtitle {
    font-size: var(--fs-lg);
    color: hsl(var(--txt) / 0.7);
    text-align: center;
    margin-bottom: var(--space-xl);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Hero Section */
  .hero-section {
    padding: var(--space-2xl) 0;
    background-color: hsl(var(--bkg));
    position: relative;
    overflow: hidden;
  }

  .hero-section .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    align-items: center;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .hero-content h1 {
    font-size: var(--fs-4xl);
    line-height: 1.2;
    color: hsl(var(--txt));
  }

  .hero-content h1 .accent {
    color: hsl(var(--accent));
  }

  .hero-subtitle {
    font-size: var(--fs-xl);
    color: hsl(var(--txt) / 0.8);
    line-height: 1.5;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-md);
  }

  /* Terminal Animation */
  .terminal {
    width: 100%;
    background-color: #1e1e1e;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    font-family: monospace;
  }

  .terminal-header {
    background-color: #323232;
    padding: var(--space-xs) var(--space-sm);
    display: flex;
    align-items: center;
  }

  .terminal-buttons {
    display: flex;
    gap: 6px;
    margin-right: var(--space-sm);
  }

  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .terminal-button.red {
    background-color: #ff5f56;
  }

  .terminal-button.yellow {
    background-color: #ffbd2e;
  }

  .terminal-button.green {
    background-color: #27c93f;
  }

  .terminal-title {
    color: #ddd;
    font-size: var(--fs-sm);
  }

  .terminal-body {
    padding: var(--space-md);
    color: #ddd;
    font-size: var(--fs-sm);
    line-height: 1.5;
  }

  .terminal-line {
    margin-bottom: var(--space-xs);
    white-space: nowrap;
  }

  .terminal-prompt {
    color: #5af78e;
    margin-right: var(--space-xs);
  }

  .terminal-command {
    color: #fff;
  }

  .terminal-response {
    margin-bottom: var(--space-xs);
    color: #ddd;
  }

  .terminal-ai {
    color: #57c7ff;
    margin-right: var(--space-xs);
  }

  /* Button Styles */
  .btn-primary, .btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: var(--fs-md);
    transition: all var(--transition-ease-fast);
    text-decoration: none;
  }

  .btn-primary {
    background-color: hsl(var(--accent));
    color: white;
    border: none;
  }

  .btn-primary:hover {
    background-color: hsl(var(--accent) / 0.9);
    transform: translateY(-2px);
    text-decoration: none;
  }

  .btn-secondary {
    background-color: hsl(var(--txt) / 0.1);
    color: hsl(var(--txt));
    border: none;
  }

  .btn-secondary:hover {
    background-color: hsl(var(--txt) / 0.15);
    transform: translateY(-2px);
    text-decoration: none;
  }

  /* Features Section */
  .features-section {
    padding: var(--space-2xl) 0;
    background-color: hsl(var(--muted));
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-lg);
    margin-top: var(--space-xl);
  }

  .feature-card {
    background-color: hsl(var(--bkg));
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    box-shadow: var(--shadow-md);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-sm);
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .feature-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    border-radius: var(--radius-full);
    background-color: hsl(var(--accent) / 0.1);
    color: hsl(var(--accent));
    margin-bottom: var(--space-sm);
  }

  .feature-card h3 {
    font-size: var(--fs-lg);
    color: hsl(var(--txt));
    margin-bottom: var(--space-xs);
  }

  .feature-card p {
    color: hsl(var(--txt) / 0.8);
    line-height: 1.6;
  }

  /* CTA Section */
  .cta-section {
    background-color: hsl(var(--accent));
    color: white;
    padding: var(--space-2xl) 0;
    text-align: center;
    margin-top: var(--space-2xl);
  }

  .cta-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: var(--fs-2xl);
    margin-bottom: var(--space-md);
    color: white;
  }

  .cta-content p {
    font-size: var(--fs-lg);
    margin-bottom: var(--space-lg);
    color: white;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
  }

  .cta-section .btn-primary {
    background-color: white;
    color: hsl(var(--accent));
  }

  .cta-section .btn-primary:hover {
    background-color: white;
    opacity: 0.9;
  }

  .cta-section .btn-secondary {
    background-color: transparent;
    color: white;
    border: 1px solid white;
  }

  .cta-section .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  /* Responsive Styles */
  @media (max-width: 992px) {
    .hero-section .container {
      grid-template-columns: 1fr;
    }

    .hero-content {
      order: 0;
      text-align: center;
    }

    .hero-image {
      order: 1;
      margin-top: var(--space-lg);
    }

    .hero-actions {
      justify-content: center;
    }

    .features-grid {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: var(--fs-3xl);
    }

    .hero-subtitle,
    .cta-content p {
      font-size: var(--fs-md);
    }

    .section-title {
      font-size: var(--fs-xl);
    }

    .hero-actions,
    .cta-buttons {
      flex-direction: column;
      gap: var(--space-sm);
    }
  }

  @media (max-width: 480px) {
    .hero-content h1 {
      font-size: var(--fs-2xl);
    }

    .section-title {
      font-size: var(--fs-lg);
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .feature-card {
      padding: var(--space-md);
    }
  }
</style>