<style>
  .footer {
    background-color: hsl(var(--muted));
    color: hsl(var(--txt));
    padding-top: var(--space-lg);
    margin-top: var(--space-xl);
  }

  .footer-container {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 var(--space-md);
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: var(--space-lg);
  }

  .footer-brand {
    flex: 1;
    min-width: 250px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: hsl(var(--accent));
    font-weight: bold;
    font-size: var(--fs-lg);
    text-decoration: none;
    margin-bottom: var(--space-sm);
  }

  .footer-tagline {
    color: hsl(var(--txt) / 0.7);
    font-size: var(--fs-sm);
    max-width: 300px;
    margin-top: var(--space-xs);
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xl);
  }

  .footer-section {
    min-width: 160px;
  }

  .footer-section h3 {
    font-size: var(--fs-md);
    font-weight: bold;
    margin-bottom: var(--space-sm);
    color: hsl(var(--txt));
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: var(--space-xs);
  }

  .footer-section a {
    color: hsl(var(--txt) / 0.7);
    text-decoration: none;
    font-size: var(--fs-sm);
    transition: color var(--transition-ease-fast);
  }

  .footer-section a:hover {
    color: hsl(var(--accent));
  }

  .footer-bottom {
    margin-top: var(--space-lg);
    padding: var(--space-md) 0;
    border-top: 1px solid hsl(var(--txt) / 0.1);
  }

  .footer-bottom .footer-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
  }

  .footer-bottom p {
    color: hsl(var(--txt) / 0.7);
    font-size: var(--fs-sm);
    margin: 0;
  }

  .social-links {
    display: flex;
    gap: var(--space-md);
  }

  .social-links a {
    color: hsl(var(--txt) / 0.7);
    transition: color var(--transition-ease-fast);
  }

  .social-links a:hover {
    color: hsl(var(--accent));
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
      gap: var(--space-md);
    }

    .footer-links {
      width: 100%;
      gap: var(--space-lg);
    }

    .footer-bottom .footer-container {
      flex-direction: column;
      text-align: center;
    }

    .social-links {
      margin-top: var(--space-sm);
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      flex-direction: column;
      gap: var(--space-md);
    }
  }
</style>